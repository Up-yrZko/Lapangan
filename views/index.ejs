<%- include('partials/header') %>

<section class="py-5 bg-primary text-white">
  <div class="container text-center">
    <h1 class="display-4 fw-bold mb-3">
      <i class="bi bi-calendar2-check"></i> Sistem Booking Lapangan
    </h1>
    <p class="lead mb-4">Pesan lapangan olahraga favorit Anda dengan mudah</p>
    <% if (!user) { %>
      <a href="/auth/login" class="btn btn-light btn-lg me-2">
        <i class="bi bi-box-arrow-in-right"></i> Login
      </a>
      <a href="/fields" class="btn btn-outline-light btn-lg">
        <i class="bi bi-list"></i> Lihat Lapangan
      </a>
    <% } else { %>
      <a href="/fields" class="btn btn-light btn-lg me-2">
        <i class="bi bi-list"></i> Lihat Lapangan
      </a>
      <% if (user.role === 'user') { %>
        <a href="/user/dashboard" class="btn btn-outline-light btn-lg">
          <i class="bi bi-bookmark-check"></i> Booking Saya
        </a>
      <% } else { %>
        <a href="/admin/dashboard" class="btn btn-outline-light btn-lg">
          <i class="bi bi-speedometer2"></i> Dashboard Admin
        </a>
      <% } %>
    <% } %>
  </div>
</section>

<section class="py-5">
  <div class="container">
    <div class="row g-4">
      <div class="col-md-4">
        <div class="card text-center h-100">
          <div class="card-body">
            <i class="bi bi-building text-primary" style="font-size: 2.5rem;"></i>
            <h5 class="card-title mt-3">Lapangan Terlengkap</h5>
            <p class="card-text text-muted">Pilihan lapangan dengan fasilitas lengkap dan terbaik</p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card text-center h-100">
          <div class="card-body">
            <i class="bi bi-calendar3 text-success" style="font-size: 2.5rem;"></i>
            <h5 class="card-title mt-3">Reservasi Mudah</h5>
            <p class="card-text text-muted">Proses booking yang cepat dan mudah melalui sistem online</p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card text-center h-100">
          <div class="card-body">
            <i class="bi bi-shield-check text-info" style="font-size: 2.5rem;"></i>
            <h5 class="card-title mt-3">Aman & Terpercaya</h5>
            <p class="card-text text-muted">Sistem pembayaran aman dan terpercaya untuk kenyamanan Anda</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Demo Credentials Section -->
<section class="py-5 bg-light border-top">
  <div class="container">
    <div class="row mb-5">
      <div class="col-12">
        <h2 class="text-center mb-4">
          <i class="bi bi-person-circle"></i> Demo Login Akun
        </h2>
        <p class="text-center text-muted mb-5">Coba aplikasi dengan akun berikut ini</p>
      </div>
    </div>

    <div class="row g-4">
      <!-- User Demo -->
      <div class="col-md-6">
        <div class="card h-100 shadow-sm">
          <div class="card-header bg-info text-white">
            <h5 class="mb-0"><i class="bi bi-person"></i> User Biasa</h5>
          </div>
          <div class="card-body">
            <div class="mb-3">
              <label class="form-label fw-semibold">Username</label>
              <div class="input-group">
                <input type="text" class="form-control" value="Miko" readonly>
                <button class="btn btn-outline-secondary" type="button" onclick="navigator.clipboard.writeText('Miko')">
                  <i class="bi bi-clipboard"></i>
                </button>
              </div>
            </div>
            <div class="mb-3">
              <label class="form-label fw-semibold">Password</label>
              <div class="input-group">
                <input type="password" class="form-control" value="password123" id="userPass" readonly>
                <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('userPass')">
                  <i class="bi bi-eye"></i>
                </button>
                <button class="btn btn-outline-secondary" type="button" onclick="navigator.clipboard.writeText('password123')">
                  <i class="bi bi-clipboard"></i>
                </button>
              </div>
            </div>
            <p class="text-muted small mb-3">
              <i class="bi bi-info-circle"></i> Akun user biasa bisa membuat booking dan melihat status booking di dashboard
            </p>
            <a href="/auth/login" class="btn btn-info w-100">
              <i class="bi bi-box-arrow-in-right"></i> Login Sebagai User
            </a>
          </div>
        </div>
      </div>

      <!-- Admin Demo -->
      <div class="col-md-6">
        <div class="card h-100 shadow-sm">
          <div class="card-header bg-danger text-white">
            <h5 class="mb-0"><i class="bi bi-shield-lock"></i> Admin</h5>
          </div>
          <div class="card-body">
            <div class="mb-3">
              <label class="form-label fw-semibold">Username</label>
              <div class="input-group">
                <input type="text" class="form-control" value="admin" readonly>
                <button class="btn btn-outline-secondary" type="button" onclick="navigator.clipboard.writeText('admin')">
                  <i class="bi bi-clipboard"></i>
                </button>
              </div>
            </div>
            <div class="mb-3">
              <label class="form-label fw-semibold">Password</label>
              <div class="input-group">
                <input type="password" class="form-control" value="admin123" id="adminPass" readonly>
                <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('adminPass')">
                  <i class="bi bi-eye"></i>
                </button>
                <button class="btn btn-outline-secondary" type="button" onclick="navigator.clipboard.writeText('admin123')">
                  <i class="bi bi-clipboard"></i>
                </button>
              </div>
            </div>
            <p class="text-muted small mb-3">
              <i class="bi bi-info-circle"></i> Akun admin bisa manage lapangan, approve/decline booking, dan lihat semua laporan
            </p>
            <a href="/auth/login" class="btn btn-danger w-100">
              <i class="bi bi-box-arrow-in-right"></i> Login Sebagai Admin
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('partials/footer') %>
