<%- include('../partials/header') %>

<div class="container-fluid py-5">
  <div class="row mb-4">
    <div class="col">
      <h2><i class="bi bi-gear"></i> Manajemen Lapangan</h2>
      <p class="text-muted">Kelola data lapangan olahraga Anda</p>
    </div>
  </div>

  <div class="row mb-4">
    <div class="col-md-12">
      <div class="card shadow-lg">
        <div class="card-header bg-success text-white">
          <h5 class="mb-0"><i class="bi bi-plus-circle"></i> Tambah Lapangan Baru</h5>
        </div>
        <div class="card-body p-4">
          <form method="POST" action="/admin/fields">
            <div class="row">
              <div class="col-md-3 mb-3">
                <label class="form-label fw-semibold">Nama Lapangan</label>
                <input 
                  type="text" 
                  name="name" 
                  class="form-control" 
                  placeholder="Contoh: Lapangan Futsal A"
                  required 
                />
              </div>
              <div class="col-md-2 mb-3">
                <label class="form-label fw-semibold">Harga (Rp/Jam)</label>
                <input 
                  type="number" 
                  name="price" 
                  class="form-control" 
                  placeholder="100000"
                  min="0"
                  required 
                />
              </div>
              <div class="col-md-4 mb-3">
                <label class="form-label fw-semibold">Lokasi</label>
                <input 
                  type="text" 
                  name="location" 
                  class="form-control" 
                  placeholder="Contoh: Jalan Merdeka No. 123"
                />
              </div>
              <div class="col-md-3 mb-3">
                <label class="form-label fw-semibold">Deskripsi</label>
                <input 
                  type="text" 
                  name="description" 
                  class="form-control" 
                  placeholder="Deskripsi singkat"
                />
              </div>
            </div>
            <div class="row">
              <div class="col">
                <button class="btn btn-success btn-lg" type="submit">
                  <i class="bi bi-plus-circle"></i> Tambah Lapangan
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="card shadow-lg">
        <div class="card-header bg-dark text-white">
          <h5 class="mb-0"><i class="bi bi-list"></i> Daftar Lapangan</h5>
        </div>
        <div class="table-responsive">
          <% if (fields && fields.length > 0) { %>
            <table class="table table-hover mb-0">
              <thead class="table-light">
                <tr>
                  <th>ID</th>
                  <th>Nama</th>
                  <th>Lokasi</th>
                  <th>Harga</th>
                  <th>Status</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% fields.forEach(field => { %>
                  <tr>
                    <td>
                      <code>#<%= field.id %></code>
                    </td>
                    <td>
                      <strong><%= field.name %></strong><br>
                      <small class="text-muted"><%= field.description || '-' %></small>
                    </td>
                    <td>
                      <i class="bi bi-geo-alt"></i> <%= field.location || '-' %>
                    </td>
                    <td>
                      <strong>Rp <%= Number(field.price).toLocaleString('id-ID') %></strong>
                    </td>
                    <td>
                      <% if (field.status === 'available') { %>
                        <span class="badge bg-success">Tersedia</span>
                      <% } else { %>
                        <span class="badge bg-danger">Tidak Tersedia</span>
                      <% } %>
                    </td>
                    <td>
                      <button 
                        class="btn btn-sm btn-warning me-1" 
                        data-bs-toggle="modal" 
                        data-bs-target="#editModal"
                        onclick="editField(<%= field.id %>, '<%= field.name %>', <%= field.price %>, '<%= field.location || '' %>', '<%= field.description || '' %>')"
                      >
                        <i class="bi bi-pencil"></i> Edit
                      </button>
                      <a 
                        href="/admin/fields/<%= field.id %>/delete" 
                        class="btn btn-sm btn-danger"
                        onclick="return confirm('Yakin ingin menghapus lapangan ini?')"
                      >
                        <i class="bi bi-trash"></i> Hapus
                      </a>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          <% } else { %>
            <div class="p-4 text-center">
              <i class="bi bi-inbox" style="font-size: 3rem;" class="text-muted"></i>
              <p class="text-muted mt-3">Belum ada lapangan. Silakan tambahkan lapangan baru.</p>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header bg-warning">
        <h5 class="modal-title">Edit Lapangan</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <form id="editForm" method="POST">
        <div class="modal-body">
          <div class="mb-3">
            <label class="form-label">Nama Lapangan</label>
            <input type="text" id="editName" name="name" class="form-control" required />
          </div>
          <div class="mb-3">
            <label class="form-label">Harga (Rp/Jam)</label>
            <input type="number" id="editPrice" name="price" class="form-control" required />
          </div>
          <div class="mb-3">
            <label class="form-label">Lokasi</label>
            <input type="text" id="editLocation" name="location" class="form-control" />
          </div>
          <div class="mb-3">
            <label class="form-label">Deskripsi</label>
            <input type="text" id="editDescription" name="description" class="form-control" />
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
          <button type="submit" class="btn btn-warning">Simpan Perubahan</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  function editField(id, name, price, location, description) {
    document.getElementById('editName').value = name;
    document.getElementById('editPrice').value = price;
    document.getElementById('editLocation').value = location;
    document.getElementById('editDescription').value = description;
    document.getElementById('editForm').action = '/admin/fields/' + id;
  }
</script>

<%- include('../partials/footer') %>
