<%- include('../partials/header') %>

<div class="container-fluid py-5">
  <div class="row mb-4">
    <div class="col-md-8">
      <h2><i class="bi bi-speedometer2"></i> Admin Dashboard</h2>
      <p class="text-muted">Kelola dan proses semua permintaan booking</p>
    </div>
    <div class="col-md-4 text-end">
      <a href="/admin/fields" class="btn btn-success">
        <i class="bi bi-gear"></i> Kelola Lapangan
      </a>
    </div>
  </div>

  <% if (bookings && bookings.length > 0) { %>
    <div class="row">
      <div class="col-md-3 mb-3">
        <div class="card text-white bg-primary">
          <div class="card-body">
            <h6 class="card-title">Total Booking</h6>
            <h3><%= bookings.length %></h3>
          </div>
        </div>
      </div>
      <div class="col-md-3 mb-3">
        <div class="card text-white bg-warning">
          <div class="card-body">
            <h6 class="card-title">Menunggu Approval</h6>
            <h3><%= bookings.filter(b => b.status === 'Pending').length %></h3>
          </div>
        </div>
      </div>
      <div class="col-md-3 mb-3">
        <div class="card text-white bg-success">
          <div class="card-body">
            <h6 class="card-title">Disetujui</h6>
            <h3><%= bookings.filter(b => b.status === 'Approved').length %></h3>
          </div>
        </div>
      </div>
      <div class="col-md-3 mb-3">
        <div class="card text-white bg-danger">
          <div class="card-body">
            <h6 class="card-title">Ditolak</h6>
            <h3><%= bookings.filter(b => b.status === 'Declined').length %></h3>
          </div>
        </div>
      </div>
    </div>

    <div class="card shadow-lg">
      <div class="card-header bg-dark text-white">
        <h5 class="mb-0"><i class="bi bi-list-check"></i> Daftar Semua Booking</h5>
      </div>
      <div class="table-responsive">
        <table class="table table-hover mb-0">
          <thead class="table-light">
            <tr>
              <th>ID</th>
              <th>User</th>
              <th>Lapangan</th>
              <th>Tanggal</th>
              <th>Jam</th>
              <th>Status</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% bookings.forEach(booking => { %>
              <tr>
                <td>
                  <code>#<%= booking.id %></code>
                </td>
                <td>
                  <strong><%= booking.User?.username || '-' %></strong><br>
                  <small class="text-muted"><%= booking.User?.email || '-' %></small>
                </td>
                <td>
                  <strong><%= booking.Field?.name || '-' %></strong><br>
                  <small class="text-muted"><%= booking.Field?.location || '-' %></small>
                </td>
                <td>
                  <%= new Date(booking.booking_date).toLocaleDateString('id-ID') %>
                </td>
                <td>
                  <%= booking.start_time %> - <%= booking.end_time %>
                </td>
                <td>
                  <% if (booking.status === 'Pending') { %>
                    <span class="badge bg-warning text-dark">Menunggu</span>
                  <% } else if (booking.status === 'Approved') { %>
                    <span class="badge bg-success">Disetujui</span>
                  <% } else { %>
                    <span class="badge bg-danger">Ditolak</span>
                  <% } %>
                </td>
                <td>
                  <% if (booking.status === 'Pending') { %>
                    <a 
                      href="/admin/booking/<%= booking.id %>/approve" 
                      class="btn btn-success btn-sm me-1"
                      title="Setujui Booking"
                    >
                      <i class="bi bi-check-circle"></i> Setujui
                    </a>
                    <a 
                      href="/admin/booking/<%= booking.id %>/decline" 
                      class="btn btn-danger btn-sm"
                      title="Tolak Booking"
                    >
                      <i class="bi bi-x-circle"></i> Tolak
                    </a>
                  <% } else { %>
                    <small class="text-muted">-</small>
                  <% } %>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  <% } else { %>
    <div class="card">
      <div class="card-body text-center py-5">
        <i class="bi bi-inbox" style="font-size: 3rem;" class="text-muted"></i>
        <h5 class="mt-3">Belum Ada Booking</h5>
        <p class="text-muted">Tidak ada permintaan booking untuk saat ini.</p>
      </div>
    </div>
  <% } %>
</div>

<%- include('../partials/footer') %>
